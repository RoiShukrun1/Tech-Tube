<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Comments Section (Collapsed) -->
    <TextView
        android:id="@+id/text_comments_collapsed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Comments"
        android:textSize="16sp"
        android:clickable="true"
        android:onClick="toggleComments" />

    <!-- Comments Section (Expanded) -->
    <LinearLayout
        android:id="@+id/layout_comments_expanded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Add your comments UI components here -->
        <!-- For example, TextViews, EditText for adding comments, etc. -->
        <!-- You can also use a RecyclerView to display a list of comments -->
    </LinearLayout>

</LinearLayout>
