<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PublisherChannelActivity">

    <!-- Header layout containing search bar and other header elements -->
    <include
        android:id="@+id/header"
        layout="@layout/main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Filters layout containing filter options for videos -->
    <include
        android:id="@+id/info"
        layout="@layout/publisher_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header" />

    <!-- Scrolling video list layout to display videos -->
    <include
        android:id="@+id/video_scrolling"
        layout="@layout/main_video_scrolling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/info"
        android:layout_above="@id/menu_bar"/>

    <!-- Menu bar layout at the bottom of the screen -->
    <include
        android:id="@+id/menu_bar"
        layout="@layout/main_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
